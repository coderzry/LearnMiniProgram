<!--pages/text/text.wxml-->
<!-- 1.基本使用 -->
<text>Hello World\n</text>
<text>你好小程序\n</text>

<!-- 2.user-select: true -->
<!-- 默认情况下,text中的文本长按是不能选中的 -->
<text user-select='{{true}}'>Hello Coderwhy\n</text>
<text user-select>Hello Coderwhy\n</text>

<!-- 3.space: 决定文本空格的大小 -->
<!-- ensp	中文字符空格一半大小 -->
<!-- emsp	中文字符空格大小 -->
<!-- nbsp	根据字体设置的空格大小 -->
<text>Hello World\n</text>
<text space="nbsp">Hello World\n</text>
<text space="ensp">Hello World\n</text>
<text space="emsp">Hello World\n</text>

<!-- 4.decode属性：是否解码文本 -->
<text decode>5 &gt; 3</text>